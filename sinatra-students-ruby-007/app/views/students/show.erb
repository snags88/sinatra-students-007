<% if flash[:updated] %>
  <%= '<div class="alert alert-success">
      <strong>Well done!</strong> The student has been updated!
    </div>'  %>
<% end %>

<div class="page-header">
  <h1 id="title" class="text-center"><%= @student.name %></h1>
</div>

<div class="row">
  <div class="col-md-4 show-container">
      <div class="cover">
        <div id="twitter" class="text-center center-xy">
          <i class="icon icon-twitter"></i>
        </div>
      </div>
      <div class="content">
        <div class="text-center center-xy">
          <%= @student.twitter %>
        </div>
      </div>
  </div>
    <div class="col-md-4 show-container">
      <div class="cover">
        <div id="github" class="text-center center-xy">
          <i class="icon icon-github-circled"></i>
        </div>
      </div>
      <div class="content">
        <div class="text-center center-xy">
          <%= @student.github %>
        </div>
      </div>
  </div>
    <div class="col-md-4 show-container">
      <div class="cover">
        <div id="linkedin" class="text-center center-xy">
          <i class="icon icon-linkedin"></i>
        </div>
      </div>
      <div class="content">
        <div class="text-center center-xy">
          <%= @student.linkedin %>
        </div>
      </div>
  </div>
</div>

<div class="row">
  <div class="col-md-4 show-container">
      <div class="cover">
        <div id="quote" class="text-center center-xy">
          <i class="icon icon-quote"></i>
        </div>
      </div>
      <div class="content">
        <div class="text-center center-xy">
          <%= @student.quote %>
        </div>
      </div>
  </div>
  <div class="col-md-4 show-container">
      <div class="cover">
        <div id="image" class="text-center center-xy">
          <div class="show-student-img">
            <img class="show-profile-img center-block center-xy" src="<%= @student.profile_img_link %>" alt="">
          </div>
        </div>
      </div>
      <div class="content">
        <div class="text-center center-xy">
          <%= @student.name %>
        </div>
      </div>
  </div>

    <div class="col-md-4 show-container">
      <div class="cover">
        <div id="bio" class="text-center center-xy">
          <i class="icon icon-doc-text"></i>
        </div>
      </div>
      <div class="content">
        <div class="text-center center-xy">
          <%= @student.bio %>
        </div>
      </div>
  </div>
</div>

<div class="row">
  <div class="col-md-4 show-container">
        <div class="cover">
          <div id="work" class="text-center center-xy">
            <i class="icon icon-briefcase"></i>
          </div>
        </div>
        <div class="content">
          <div class="text-center center-xy">
            <%= @student.work %>
            <%= @student.work_title %>
          </div>
        </div>
    </div>
  <div class="col-md-4 show-container">
      <div class="cover">
        <div id="education" class="text-center center-xy">
          <i class="icon icon-book-open"></i>
        </div>
      </div>
      <div class="content">
        <div class="text-center center-xy">
          <%= @student.education %>
        </div>
      </div>
  </div>
    <div class="col-md-4 show-container">

      <div class="cover">
        <div id="education" class="text-center center-xy">
          <i class="icon glyphicon glyphicon-pencil"></i>
        </div>
      </div>
      <div class="content">
        <a href="/students/<%= @student.slug %>/edit">
          <div class="text-center center-xy">
            Edit Info
          </div>
        </a>
      </div>
  </div>
</div>

<div class="row">
    <div class="col-md-4 col-md-offset-4 show-container">
      <div class="cover">
        <div id="education" class="text-center center-xy">
          <i class="icon glyphicon glyphicon-home"></i>
        </div>
      </div>
      <div class="content">
        <a href="/students">
          <div class="text-center center-xy">
            Home
          </div>
        </a>
      </div>
  </div>
</div>
<form class="form-horizontal" action="/students" method="POST">
  <fieldset>
    <legend>New Student</legend>

    <div class="form-group">
          <label for="inputName" class="col-md-2 control-label">Name</label>
          <div class="col-md-10">
            <input type="text" class="form-control" id="inputName" placeholder="Name" name="attributes[name]">
          </div>
    </div>
    <div class="form-group">
      <label for="inputTwitter" class="col-md-2 control-label">Twitter Link</label>
      <div class="col-md-10">
        <input type="text" class="form-control" id="inputTwitter" placeholder="Twitter URL" name="attributes[twitter]">
      </div>
    </div>
    <div class="form-group">
      <label for="inputLinkedIn" class="col-md-2 control-label">LinkedIn Link</label>
      <div class="col-md-10">
        <input type="text" class="form-control" id="inputLinkedIn" placeholder="LinkedIn URL" name="attributes[linkedin]">
      </div>
    </div>
    <div class="form-group">
      <label for="inputGithub" class="col-md-2 control-label">GitHub Link</label>
      <div class="col-md-10">
        <input type="text" class="form-control" id="inputGithub" placeholder="GitHub URL" name="attributes[github]">
      </div>
    </div>
    <div class="form-group">
      <label for="inputQuote" class="col-md-2 control-label">Quote</label>
      <div class="col-md-10">
        <input type="text" class="form-control" id="inputQuote" placeholder="Favorite Quote" name="attributes[quote]">
      </div>
    </div>
    <div class="form-group">
      <label for="inputBio" class="col-md-2 control-label">Short Bio</label>
      <div class="col-md-10">
        <input type="text" class="form-control" id="inputBio" placeholder="Short Bio" name="attributes[bio]">
      </div>
    </div>
    <div class="form-group">
      <label for="inputWork" class="col-md-2 control-label">Work</label>
      <div class="col-md-10">
        <input type="text" class="form-control" id="inputWork" placeholder="Last Workplace" name="attributes[work]">
      </div>
    </div>
    <div class="form-group">
      <label for="inputWorkTitle" class="col-md-2 control-label">Work Title</label>
      <div class="col-md-10">
        <input type="text" class="form-control" id="inputWorkTitle" placeholder="Last Work Title" name="attributes[work_title]">
      </div>
    </div>
    <div class="form-group">
      <label for="inputEducation" class="col-md-2 control-label">Education</label>
      <div class="col-md-10">
        <input type="text" class="form-control" id="inputEducation" placeholder="Edcuation Info" name="attributes[education]">
      </div>
    </div>
    <div class="form-group">
      <span class="col-md-offset-2 col-md-10">
        <a href="/students" class="btn btn-default">Cancel</a>
        <input type="submit" class="btn btn-success" value="Create">
      </span>
    </div>
  </fieldset>
</form>
<div class="page-header">
  <h1 id="title" class="text-center">// Flatiron School Class 007</h1>
</div>

<% if flash[:new] %>
  <%= '<div class="alert alert-success">
      <strong>Well done!</strong> A new student has been created!
    </div>'  %>
<% end %>

<% @students.each.with_index do |s, i| %>
  <%= '<div class="row index-row">' if (i % 3) == 0 %>
    <div class="col-md-4">
      <div class="each-student-box">
        <div class="show-student-img">
          <a href="/students/<%= s.slug %>"><img class="profile-img center-xy" src="<%= s.profile_img_link %>" alt=""></a>
          </div>
        <div class="student-border">
          <h3 class="text-center"><a href="/students/<%= s.slug %>"><%= s.name %></a></h3>
        </div>
      </div>
    </div>
  <%= '</div>' if ((i + 1) % 3) == 0 %>
<% end %>

  <!-- <div class="row index-row"> -->
    <div class="col-md-4">
      <div class="each-student-box">
        <div class="new-student">
          <div class="center-xy">
            <a href="/students/new" class="icon-link">
              <span class="glyphicon glyphicon-plus center-block text-center"></span>
            </a>
          </div>
        </div>
        <div class="student-border">
          <h3 class="text-center"><a href="/students/new">Add New Student</a></h3>
        </div>
      </div>
    </div>
  <!-- </div> -->
